<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_row_bg"
    android:padding="3dp"
    android:layout_marginBottom="2dp"
    android:orientation="horizontal"
    android:maxHeight="150dp"
    android:weightSum="4"
    >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_weight="3"
        >
        <si.cit.clothingorigin.views.FontView
            android:id="@+id/product_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="8pt"
            tools:text="Cotton Inc."
            app:customFont="LatoHeavy"
            />

        <si.cit.clothingorigin.views.FontView
            android:id="@+id/product_soldBy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="6pt"
            tools:text="China"
            app:customFont="LatoItalic"
            />

        <si.cit.clothingorigin.views.FontView
            android:id="@+id/product_eco_reward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="6pt"
            tools:text="Cotton production"
            app:customFont="LatoItalic"
            />

    </LinearLayout>
    <ImageView
        android:id="@+id/product_photo"
        android:layout_width="50dp"
        android:layout_height="100dp"
        tools:src="@drawable/ic_emoji_neutral"
        android:layout_gravity="end"
        android:layout_weight="1"
        />
</LinearLayout>